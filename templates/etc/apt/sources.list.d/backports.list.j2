{% if ansible_distribution == 'Debian' and ansible_distribution_major_version|int >= 9 %}
deb https://{{ apt_main_url }}/debian {{ ansible_distribution_release }}-backports main
{% elif ansible_distribution == 'Debian' and ansible_distribution_major_version|int <= 8 %}
deb http://archive.debian.org/debian {{ ansible_distribution_release }}-backports main
{% elif ansible_distribution == 'Ubuntu' %}
deb mirror://mirrors.ubuntu.com/mirrors.txt {{ ansible_distribution_release }}-backports main restricted universe multiverse
{% endif %}
