{% if ansible_distribution == 'Debian' %}
deb https://{{ apt_main_url }}/debian {{ ansible_distribution_release }} main contrib non-free
deb https://{{ apt_main_url }}/debian {{ ansible_distribution_release }}-updates main contrib non-free
{% elif ansible_distribution == 'Ubuntu' %}
deb mirror://mirrors.ubuntu.com/mirrors.txt {{ ansible_distribution_release }} main restricted universe multiverse
deb mirror://mirrors.ubuntu.com/mirrors.txt {{ ansible_distribution_release }}-updates main restricted universe multiverse
deb mirror://mirrors.ubuntu.com/mirrors.txt {{ ansible_distribution_release }}-proposed main restricted universe multiverse
{% endif %}
